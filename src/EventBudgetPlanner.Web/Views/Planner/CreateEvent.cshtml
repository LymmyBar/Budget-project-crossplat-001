@model CreateEventInputModel
@{
    ViewData["Title"] = "Create event";
}

<section class="mb-4">
    <h1 class="h3">Create event</h1>
    <p class="text-muted">Interactive version of the <code>event create</code> CLI command.</p>
</section>

<div class="form-panel">
    <form asp-action="CreateEvent" method="post" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Venue" class="form-label"></label>
                <input asp-for="Venue" class="form-control" />
                <span asp-validation-for="Venue" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="TargetBudget" class="form-label"></label>
                <input asp-for="TargetBudget" class="form-control" />
                <span asp-validation-for="TargetBudget" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Currency" class="form-label"></label>
                <input asp-for="Currency" class="form-control text-uppercase" maxlength="3" />
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save event</button>
            <a asp-action="Dashboard" class="btn btn-outline-secondary">Back to dashboard</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
